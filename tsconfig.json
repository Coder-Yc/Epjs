{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "es2017", "esnext"],
        "strictNullChecks": true,
        "strict": true,
        "alwaysStrict": true,
        "rootDirs": ["."],
        "inlineSources": true,
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
